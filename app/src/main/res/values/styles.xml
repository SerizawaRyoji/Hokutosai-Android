<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- ActionBar styles -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <!-- Support library compatibility -->
        <item name="background">@color/KosenOrange</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/clear_black</item>
        <item name="centered">true</item>
        <item name="pageColor">@color/clear_black</item>
        <item name="strokeColor">@color/ClearColor</item>
        <item name="radius">6dp</item>
    </style>

    <style name="MyRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="ReviewRating" parent="@android:style/Widget.Holo.Light.RatingBar.Small">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="ReviewWriteRating" parent="@android:style/Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:isIndicator">false</item>
    </style>

    <style name="EditStyle" parent="@android:style/Widget.Holo.Light.EditText" />

</resources>
